<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/home_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:text="AI Trip Itinerary Planner"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:shadowColor="#40000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Destination Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter destination"
        app:boxStrokeColor="@color/md_theme_light_primary"
        app:hintTextColor="@color/md_theme_light_onPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/placeInput"
            android:inputType="text"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Number of Days Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Number of days"
        app:boxStrokeColor="@color/md_theme_light_primary"
        app:hintTextColor="@color/md_theme_light_onPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/daysInput"
            android:inputType="number"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Budget Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Estimated budget (â‚¹)"
        app:boxStrokeColor="@color/md_theme_light_primary"
        app:hintTextColor="@color/md_theme_light_onPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/budgetInput"
            android:inputType="number"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Travelers Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Number of travelers"
        app:boxStrokeColor="@color/md_theme_light_primary"
        app:hintTextColor="@color/md_theme_light_onPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/travelersInput"
            android:inputType="number"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Generate Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/generateButton"
        android:text="Generate Itinerary"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cornerRadius="16dp"
        android:textColor="@color/md_theme_light_onPrimary"
        app:backgroundTint="@color/md_theme_light_primary" />

    <!-- RecyclerView for Cards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itineraryRecyclerView"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

</LinearLayout>
