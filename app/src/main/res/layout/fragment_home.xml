<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient"
    android:fillViewport="true"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- ðŸ§­ Greeting Section -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Morning, Traveler!"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="12dp"
            android:shadowColor="#55000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <TextView
            android:id="@+id/dailyQuote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€œTravel far enough to meet yourself.â€ ðŸŒ"
            android:textColor="#E0E0E0"
            android:textSize="16sp"
            android:textStyle="italic"
            android:gravity="center"
            android:padding="8dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

        <!-- âœ¨ Quick Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEvents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŽ‰ Events"
                android:textAllCaps="false"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                app:cornerRadius="24dp"
                android:elevation="4dp"
                android:layout_marginEnd="8dp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:rippleColor="?attr/colorOnPrimaryContainer" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSafety"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ›¡ Safety"
                android:textAllCaps="false"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                app:cornerRadius="24dp"
                android:elevation="4dp"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:rippleColor="?attr/colorOnPrimaryContainer" />

        </LinearLayout>

        <!-- ðŸŒ App Description Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/purple_500"
            app:strokeWidth="1dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ About TripGenei AI"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/purple_500"
                    android:gravity="center"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your smart travel companion powered by AI â€” plan your trips, explore upcoming events, and stay safe with real-time insights."
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:paddingHorizontal="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸš€ Feature Highlights -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What We Offer"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="28dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <!-- Feature 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FFFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_auto_awesome"
                        app:tint="@color/purple_500"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ§  AI Trip Planner â€“ Generate smart day-wise itineraries."
                        android:textSize="15sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Feature 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FFFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_event_24"
                        app:tint="@color/purple_500"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽŸ Local Events â€“ Discover concerts, festivals &amp; activities."
                        android:textSize="15sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Feature 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FFFFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_security_24"
                        app:tint="@color/purple_500"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ›¡ Smart Safety Checker â€“ Real-time weather &amp; area insights."
                        android:textSize="15sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- ðŸ’¡ Travel Tips Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Travel Tip of the Day"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="28dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFFFF"
            app:strokeColor="@color/purple_500"
            app:strokeWidth="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="ðŸ’¡ Always keep a copy of your passport &amp; important documents in the cloud."
                android:textColor="#000000"
                android:textSize="15sp" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
