<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- ðŸ›¡ï¸ Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:strokeColor="@android:color/white"
            app:strokeWidth="1dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_baseline_security_24"
                    app:tint="@color/purple_500"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/safetyHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Check Safety of Your City"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get live weather, crime &amp; accident insights to plan a safer journey!"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="6dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ðŸŒ‡ City Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter City Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:textColor="@android:color/black"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="10dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- âœ… Check Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheckSafety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Safety ðŸš¦"
            android:layout_marginTop="20dp"
            app:cornerRadius="16dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_baseline_search_24"
            app:iconGravity="textStart"
            app:iconTint="@android:color/white"
            android:backgroundTint="@color/purple_500" />

        <!-- ðŸ§  Result Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/purple_500"
            app:strokeWidth="1dp"
            android:backgroundTint="#FFFFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textResultTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Safety Report"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/textResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter a city name to check safety insights."
                    android:textColor="#424242"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
